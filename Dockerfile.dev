FROM node:20-bullseye-slim

WORKDIR /app/spa

# Install deps first (cacheable)
COPY spa/ /app/spa/
RUN npm install --no-audit --no-fund

# Copy sources (will be overridden by bind mount in dev)
COPY spa/ /app/spa/

EXPOSE 5173
CMD ["sh","-lc","set -e; npm config set fund false; npm config set audit false; npm config set fetch-retries 5; npm config set fetch-timeout 600000; if [ ! -x node_modules/.bin/vite ]; then npm install --no-audit --no-fund; fi; npx vite --host 0.0.0.0 --port 5173 --base /"]


